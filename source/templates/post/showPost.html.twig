{% extends'layout.html.twig' %}

  {% block body %}
      <div class="row g-5">
          <div class="col-md-8">
              <article class="blog-post">
                  <h2 class="blog-post-title">
                     {{ post.getName() }} <br/>
                  </h2>
                  <p class="blog-post-meta">
                      {{ post.getPublicAt()| date('Y-m-d') }}
                      by
                      <a href="{{ path('default_kile') }}">{{ author.getAuthor }}</a>
                      <a href="{{ path('post_editMyPost', {id: post.getId}) }}">edit post</a></p>
                  <p>
                      {{ post.getDescription() }}
                   </article>
          </div>
      </div>
  {% endblock %}



