{% extends 'layout.html.twig' %}

{% block body %}

<div class="row g-5">
    <div class="col-md-8">

        <article class="blog-post">
            <h2 class="blog-post-title">{{ post.getName() }}</h2>
            <p class="blog-post-meta">
                {{ post.getPublishedAt()|date('Y-m-d') }},

                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('post_edit', { post: post.getId()}) }}">{{ 'edit'|trans({}, 'post') }}</a>
                    <a href="{{ path('post_delete', { post: post.getId()}) }}"
                       onclick="return confirm('{{ 'Are you sure?'|trans({}, 'post') }}')"
                    >[X]</a>
                {% endif %}
            </p>

            {{ post.getDescription() }}
        </article>

    </div>
</div>

{% endblock %}
